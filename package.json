{
  "name": "metalsmith-typescript",
  "version": "1.0.0",
  "description": "a TypeScript plugin for metalsmith",
  "main": "lib/index.js",
  "scripts": {
    "test": "mocha --recursive ./test/specs",
    "tsc_lib": "tsc --outDir ./lib src/lib/*.ts",
    "tsc_spec": "tsc --outDir ./test/specs src/test/specs/*.ts",
    "dev": "npm run tsc_lib && npm run tsc_spec && npm run test"
  },
  "keywords": [
    "metalsmith",
    "TypeScript"
  ],
  "author": "Shinsuke-Abe",
  "license": "MIT",
  "dependencies": {
    "typescript-compiler": "^1.4.1-2",
    "async": "^0.9.0"
  },
  "devDependencies": {
    "metalsmith": "^1.3.0",
    "chai": "^2.1.2",
    "assert-dir-equal": "^1.0.1",
    "mocha": "^2.2.1",
    "rimraf": "^2.3.2"
  }
}
